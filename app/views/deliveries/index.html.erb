<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @deliveries.each do |delivery| %>
    <tr>
      <td>Delivery Id: <%= delivery.id %></td>
      <td>Estimated Delivery Date: <%= delivery.delivery_date %></td>
      <td>Delivery On Time: <%= delivery.delivery_on_time %></td>
      <%= delivery.delivery_order.order.client_name %>
      <td><%= link_to 'Show', delivery %></td>
      <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
      <td><%= link_to 'Destroy', delivery, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Delivery', new_delivery_path %>
