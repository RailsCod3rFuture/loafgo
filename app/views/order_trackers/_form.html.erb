<%= simple_form_for(@order_tracker) do |f| %>
  <%= f.error_notification %>

  <%= f.simple_fields_for :order_tracker do |order_t| %>
    <div class="form-group">
      <div class="col-4">
        <%= order_t.input :time_delivered, collection: ["Order Delayed", "Delivery Attempt Failed (Contact UPS)", Time.now.strftime('%A, %d %b %Y %l:%M %p')], :include_blank => "Select a Delivery Time or Service Status" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-5">
        <%= order_t.input :delivery_on_time, as: :boolean, :input_html => {:checked => false}, class: 'form-check-input' %>
        <%= order_t.input :order_shipped, as: :boolean, :input_html => {:checked => false}, class: 'form-check-input' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-5">
        <%= order_t.input :order_location, placeholder: 'What is the current location of the shipment? If still at the warehouse, type: TBA' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-5">
      <label>Name</label>
      <%= f.input :client_name, required: true, label: false, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-5">
      <label>Zip Code</label>
      <%= f.input :client_zip_code, required: true, label: false, class: 'form-control', disabled: true %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-5">
      <label>Address</label>
      <%= f.input :client_address, required: true, label: false, class: 'form-control', disabled: true %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-5">
      <label>State</label>
      <%= f.input :client_state, required: true, label: false, class: 'form-control', disabled: true %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-5">
      <label>Bread Quantity</label>
      <%= f.input :bread_quantity, collection: 10..2000, prompt: "What is the bulk quantity of your loaves of bread?", required: true, label: false, class: 'form-control', disabled: true %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-5">
      <%= f.button :submit, class: 'btn btn-outline-dark' %>
    </div>

  </div>
<% end %>
