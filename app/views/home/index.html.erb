        </section>
      </div>
    </div>
  </div>

</div>
<div class="full-width-bg-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="welcome-message-box">
          <h1><%= inline_svg 'home_img_assets/truck.svg', height: 27, width: 27 %> WHAT DO WE OFFER?</h1>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <div class="card">
          <div class="card-block text-center card-bottom-padding">
            <%= image_tag 'home_img_assets/Warehouse-Forklift.jpg', class: 'wrap-img-index' %>
            <h3 class="card-title card-header-color">24 Hour Shipment or Less</h3>
            <p class="card-text">We will ship a bulk of fresh bread loaves from our warehouse as soon as your
              order is placed</p>
            <a href="#" class="btn btn-outline-dark video-btn card-button-bottom-padding" data-toggle="modal" data-src="https://www.youtube.com/watch?v=KzsHYFK4Zhw" data-target="#myModal">Learn
              more about our fast deliveries</a>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-block text-center card-bottom-padding">
            <%= image_tag 'home_img_assets/Truck-Formula-1.jpg', class: 'wrap-img-index' %>
            <h3 class="card-title card-header-color">GPS Tracking</h3>
            <p class="card-text">You will easily be able to locate the truck with your shipment on it</p>
            <a href="#" class="btn btn-outline-dark video-btn" data-toggle="modal" data-src="https://www.youtube.com/watch?v=EKN_dwIVuZE" data-target="#myModal">Learn
              more about our AI 'Loctable'</a>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-block text-center card-bottom-padding">
            <%= image_tag 'home_img_assets/Bakery-Boulanger-Bread-Stick.jpg', class: 'wrap-img-index' %>
            <h3 class="card-title card-header-color">Fresh Bread Guaranteed</h3>
            <p class="card-text">LoafGo will bake your shipment within 2 hours of receiving/confirming your order.</p>
            <a href="#" class="btn btn-outline-dark video-btn" data-toggle="modal" data-src="https://www.youtube.com/watch?v=3UjUWfwWAC4" data-target="#myModal">Learn
              more about our Bread Factory</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">


      <div class="modal-body">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <!-- 16:9 aspect ratio -->
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="" id="video" allowscriptaccess="always">></iframe>
        </div>


      </div>

    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).on('turbolinks:load', function () {
        var options = {
            useEasing: true,
            useGrouping: true,
            separator: ',',
            decimal: '.',
        };
        var demo = new CountUp('myTargetElement', 0, 100000, 0, 49, options);
        if (!demo.error) {
            demo.start();
        } else {
            console.error(demo.error);
        }

        $(document).ready(function () {

// Gets the video src from the data-src on each button

            var $videoSrc;
            $('.video-btn').click(function () {
                $videoSrc = $(this).data("src");
            });
            console.log($videoSrc);


// when the modal is opened autoplay it
            $('#myModal').on('shown.bs.modal', function (e) {

// set the video src to autoplay and not to show related video. Youtube related video is like a box of chocolates... you never know what you're gonna get
                $("#video").attr('src', $videoSrc + "?rel=0&amp;showinfo=0&amp;modestbranding=1&amp;autoplay=1");
            });


// stop playing the youtube video when I close the modal
            $('#myModal').on('hide.bs.modal', function (e) {
                // a poor man's stop video
                $("#video").attr('src', $videoSrc);
            })


// document ready
        });

    });
</script>