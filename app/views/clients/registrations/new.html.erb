<h2>Sign up</h2>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <div class="col-5">
        <label>Email</label>
        <%= f.input :email, required: true, autofocus: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Full Name</label>
        <%= f.input :full_name, required: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Company</label>
        <%= f.input :company, required: true, class: 'form-control', label: false %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-5">
        <label>State</label>
        <%= f.input :state, collection: CS.states(:us), prompt: 'Choose your state', required: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Zip Code</label>
        <%= f.input :zip_code, required: true, label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Telephone</label>
        <%= f.input :telephone, required: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Password</label>
        <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Password Confirmation</label>
        <%= f.input :password_confirmation, required: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-actions">
      <div class="col-5">
       <%= f.button :submit, "Sign up", class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
</div>


