<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="client-login-header text-center">
        <h2>Log in</h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="col-5">
        <label>Email</label>
        <%= f.input :email, required: false, autofocus: true, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Password</label>
        <%= f.input :password, required: false, label: false, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <%= f.button :submit, "Log in", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-5">
      <%= render "clients/shared/links" %>
    </div>
  </div>
</div>

