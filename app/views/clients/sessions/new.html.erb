
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-box-container">
      <div class="form-group">
        <div class="client-login-header text-center">
          <h2>Log into <strong>LoafGo </strong>
            <small style="font-family: 'Arial Narrow';">Client</small>
          </h2>
        </div>
      </div>
      <div class="form-box-divider"></div>
      <div class="form-group">
        <div class="login-label-color">
          <label><strong>Email</strong></label>
          <%= f.input :email, required: false, autofocus: true, class: 'form-control', label: false %>
        </div>
      </div>
      <div class="form-group">
        <div class="login-label-color">
          <label><strong>Password</strong></label>
          <%= f.input :password, required: false, label: false, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-5">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Log in", class: 'btn btn-outline-info btn-block login-btn-pos' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-5">
      <%= render "clients/shared/links" %>
    </div>
  </div>
</div>

