<%= form_for(@order_feedback) do |f| %>
  <div class="form-group">
    <div class="col-5">
      <label>Title Or Description of Order Feedback</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-5">
      <label>Order Satisfaction Level</label>
      <%= f.select :order_opinion, options_for_select(%w(Happy Unhappy Unsure)), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-6">
      <label>Write Your Feedback Review</label>
      <div class="emoji-picker-container">
        <%= f.text_area :feedback_body_text, input_html: {rows: 10, cols: 10}, class: 'form-control', label: false, data: {emojiable: true} %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-4">
      <%= f.submit 'Submit Feedback', class: 'btn btn-outline-success' %>
    </div>
  </div>
<% end %>

