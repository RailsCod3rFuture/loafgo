<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-box-container-manager">
      <div class="form-group">
        <div class="manager-login-header text-center">
          <h2>Log into <strong>LoafGo </strong>
            <small style="font-family: 'Arial Narrow';">Management</small>
          </h2>
        </div>
      </div>
      <div class="form-box-divider-manager"></div>
      <div class="form-group">
        <div class="login-label-color">
          <label><strong>Email</strong> </label>
          <%= f.input :email, required: false, autofocus: true, class: 'form-control', label: false %>
        </div>

      </div>
      <div class="form-group">
        <div class="login-label-color">
          <label><strong>Password</strong></label>
          <%= f.input :password, required: false, class: 'form-control', label: false %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-5">
          <%= f.input :remember_me, class: 'form-control', as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="form-group">
        <%= f.button :submit, "Log in", class: 'btn btn-outline-info btn-block' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-3">
        <%= render "managers/shared/links" %>
      </div>
    </div>
  <% end %>
</div>



