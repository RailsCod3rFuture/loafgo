<div class="container">
  <div class="text-center">
    <h2>Log in</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="col-4">
        <label>Email</label>
        <%= f.input :email, required: false, autofocus: true, class: 'form-control', label: false %>
      </div>

    </div>
    <div class="form-group">
      <div class="col-4">
        <label>Password</label>
        <%= f.input :password, required: false, class: 'form-control', label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-4">
        <%= f.input :remember_me, class: 'form-control', as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-3">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-3">
        <%= render "managers/shared/links" %>
      </div>
    </div>
  <% end %>
</div>



