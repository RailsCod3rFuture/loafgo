<div class="container">
  <div class="manager-registration-header">
    <h2>Create Your Management Account</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <div class="col-5">
        <label>Email</label>
        <%= f.input :email, required: true, autofocus: true, label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Full Name</label>
        <%= f.input :full_name, required: true, label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-5">
        <label>Password</label>
        <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>

    </div>

    <div class="form-group">
      <div class="col-5">
        <label>Password Confirmation</label>
        <%= f.input :password_confirmation, required: true, label: false %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-4">
        <%= f.button :submit, "Sign up", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>

